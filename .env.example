# ==============================================
# OPERABASE - CONFIGURAÇÕES DE AMBIENTE
# ==============================================

# Ambiente de execução
NODE_ENV=development
PORT=3000

# ==============================================
# BANCO DE DADOS
# ==============================================

# PostgreSQL principal
DATABASE_URL=postgresql://username:password@localhost:5432/operabase

# Supabase (usado para auth e storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ==============================================
# CACHE E SESSÕES
# ==============================================

# Redis para cache e sessões
REDIS_URL=redis://localhost:6379
SESSION_SECRET=your-super-secret-session-key-here

# ==============================================
# INTELIGÊNCIA ARTIFICIAL
# ==============================================

# OpenAI para GPT
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic para Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# ==============================================
# WHATSAPP INTEGRATION
# ==============================================

# Evolution API para WhatsApp
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=your-evolution-api-key

# ==============================================
# GOOGLE INTEGRATIONS
# ==============================================

# Google Calendar API
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# ==============================================
# N8N WORKFLOW AUTOMATION
# ==============================================

# N8N Integration
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_API_KEY=your-n8n-api-key

# ==============================================
# STORAGE E UPLOADS
# ==============================================

# Configurações de upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# ==============================================
# EMAIL E NOTIFICAÇÕES
# ==============================================

# SMTP para envio de emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ==============================================
# SEGURANÇA E CORS
# ==============================================

# CORS Origins (separados por vírgula)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# JWT Secret (se usado)
JWT_SECRET=your-jwt-secret-key

# ==============================================
# MONITORAMENTO E LOGS
# ==============================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Sentry para error tracking (opcional)
SENTRY_DSN=your-sentry-dsn

# ==============================================
# DESENVOLVIMENTO
# ==============================================

# Habilitar debug mode
DEBUG_MODE=true

# Habilitar logs SQL
SQL_DEBUG=false

# Seed database com dados de teste
SEED_DATABASE=false
